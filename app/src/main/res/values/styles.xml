<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--General-->

    <style name="toolbar_title">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="toolbar_barrier">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ui_03</item>
    </style>

    <style name="edit_text_layout">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/ui_06</item>
        <item name="boxBackgroundColor">?attr/ui_01</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/ui_02</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextColor">@color/ui_02</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/ui_06</item>
    </style>

    <style name="progress_bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">4dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">invisible</item>
        <item name="indicatorColor">?attr/ui_01</item>
    </style>

    <!--Sign In / Sign Up Fragments-->

    <style name="authorization_tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/ui_03</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="authorization_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/bg_btn_orange</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">?attr/ui_01</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="authorization_tv_question">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/ui_06</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="authorization_tv_action_link">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/ui_05</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Rooms Fragment-->

    <style name="item_room_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--Room Details Fragment-->

    <style name="room_details_tv_action">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_tv_outlined</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:textColor">@color/ui_03</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="room_details_tv_hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ui_03</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="room_details_tv_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ui_06</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!--Room Booking Fragment-->

    <style name="room_booking_tv_hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/ui_03</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="room_booking_btn" parent="authorization_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:background">@drawable/selector_bg_btn</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="room_booking_tv_selection">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:background">@drawable/bg_tv_outlined</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textColor">@color/ui_05</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>