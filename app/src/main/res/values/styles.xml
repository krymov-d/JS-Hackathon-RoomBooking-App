<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Login_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ui_03</item>
        <item name="android:textSize">40sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Login_text_input_layout">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/ui_06</item>
        <item name="boxBackgroundColor">@color/ui_01</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/ui_02</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextColor">@color/ui_02</item>
    </style>

    <style name="Login_text_input_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ui_06</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Login_question">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ui_06</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Login_action">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ui_05</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="rooms_title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Room_details_outlined_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="Room_details_description_hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ui_03</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Room_details_description_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ui_06</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="room_booking_hints">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ui_02</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="room_booking_buttons">
        <item name="android:layout_width">136dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/ui_01</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:background">@drawable/selector_bg_btn_book</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="room_booking_edit_text_layouts" parent="Login_text_input_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

</resources>